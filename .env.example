# Moodle API Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Development and Production Instances
# =============================================================================

# Development instance (default for all development/testing)
MOODLE_DEV_URL=https://moodle-projects.example.com
MOODLE_DEV_TOKEN=your_dev_token_here

# Production instance (teaching/live courses)
MOODLE_PROD_URL=https://moodle-courses.example.com
MOODLE_PROD_TOKEN=your_prod_token_here

# Environment selection (default: 'dev')
# Set to 'prod' to use production instance
# MOODLE_ENV=dev

# How to generate tokens:
# 1. Log in to Moodle
# 2. Go to: Profile > Preferences > Security keys
# 3. Create token or view existing tokens

# =============================================================================
# WRITE OPERATION SAFETY
# =============================================================================

# DEV: Whitelist of course IDs that allow write operations
# Only these courses will allow write/create/delete operations in DEV mode
# Format: Comma-separated list of course IDs
# Example: MOODLE_DEV_COURSE_WHITELIST=7299,8001,9543
MOODLE_DEV_COURSE_WHITELIST=7299

# PROD: Allow write operations in production (default: false)
# WARNING: Keep this false unless absolutely necessary!
# Write operations in PROD are disabled by default for safety
MOODLE_PROD_ALLOW_WRITES=false

# =============================================================================
# OPTIONAL: Performance and Connection Settings
# =============================================================================

# API request timeout in seconds (default: 30)
MOODLE_API_TIMEOUT=30

# Maximum number of HTTP connections (default: 100)
MOODLE_MAX_CONNECTIONS=100

# Maximum keepalive connections (default: 20)
MOODLE_MAX_KEEPALIVE_CONNECTIONS=20

# Maximum response characters before truncation (default: 50000)
MOODLE_MAX_RESPONSE_CHARS=50000
